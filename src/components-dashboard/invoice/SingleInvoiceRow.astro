---
const { id, invoiceNumber, date, status, dueAmount, paidAmount } = Astro.props;
---

<tr class="bg-white border-b hover:bg-gray-50">
  <td class="p-4">
    <input
      type="checkbox"
      class="w-4 h-4 text-blue-600 border-gray-300 rounded"
    />
  </td>
  <td class="p-4 text-center">{id}</td>

  <td class="px-6 py-4 font-medium text-gray-900">{invoiceNumber}</td>
  <td class="px-6 py-4 font-medium">{date}</td>
  <td class="px-6 py-4">
    <span
      class={`px-3 py-1 text-sm font-medium text-green-800 bg-green-100 rounded-full ${
        status === "PAID"
          ? "text-black bg-green-100 "
          : status === "UNPAID"
            ? " bg-red-100 text-red-500"
            : status === "PARTIALLY PAID"
              ? "bg-blue-100 text-blue-500"
              : "bg-yellow-100 text-yellow-500"
      } `}
    >
      {status}
    </span>
  </td>
  <td class="px-10 py-4">{dueAmount}</td>
  <td class="px-10 py-4">{paidAmount}</td>
  <td class="px-6 py-4">
    <button
      class="px-4 py-2 text-white bg-gray-800 rounded-md hover:bg-gray-900"
    >
      Pay
    </button>
  </td>
  <td class="px-6 py-4">
    <button
      class="px-4 py-2 text-black bg-[#BEFFA7] rounded-md hover:bg-green-200"
    >
      Download
    </button>
  </td>
</tr>
